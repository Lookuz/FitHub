<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_page_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fithub.codekienmee.fithub.MainPageActivity">

    <!--Sliding Menu-->
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_navigation"
        app:headerLayout="@layout/header_navigation">

    </android.support.design.widget.NavigationView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!--Overhead Navigation bar-->
        <android.support.v7.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/main_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/red"
            android:translationZ="5dp"
            android:elevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.SearchView
                        android:id="@+id/main_search_bar"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginLeft="150dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginStart="150dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/search_bar_rounded"
                        android:padding="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"></android.support.v7.widget.SearchView>
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <!--Buttons for functions-->
        <LinearLayout
            android:id="@+id/main_nav_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkRed"
            android:orientation="horizontal"
            android:weightSum="2">

            <!--Location Services Button-->
            <Button
                android:id="@+id/main_location_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/main_button_ripple"
                android:fontFamily="@font/lato_light"
                android:padding="0dp"
                android:text="@string/main_location_button"
                android:textStyle="bold"
                tools:text="@string/main_location_button" />

            <!--Forum and Posts Button-->
            <Button
                android:id="@+id/main_forum_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="@drawable/main_button_ripple"
                android:fontFamily="@font/lato_light"
                android:padding="0dp"
                android:text="@string/main_forum_button"
                android:textStyle="bold"
                tools:text="@string/main_forum_button" />

        </LinearLayout>

        <!--View for location based service and forum-->
        <FrameLayout
            android:id="@+id/main_frag_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </FrameLayout>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>