<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_up_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.fithub.codekienmee.fithub.StartUpActivity"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/start_up_logo"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:background="@color/white"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_fithub_logo_slogan_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>


    <!--<FrameLayout-->
        <!--android:id="@+id/start_up_frag_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--app:layout_constraintBottom_toBottomOf="parent"-->
        <!--app:layout_constraintEnd_toEndOf="parent"-->
        <!--app:layout_constraintStart_toStartOf="parent"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/start_up_logo" >-->

    <!--</FrameLayout>-->

    <ViewFlipper
        android:id="@+id/start_up_view_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/start_up_login_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/start_up_login"
                android:fontFamily="@font/lato_light"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/start_up_button"
                android:elevation="2dp"
                android:translationZ="2dp"
                android:text="@string/start_up_log_in"/>

            <Button
                android:id="@+id/start_up_sign_up"
                android:fontFamily="@font/lato_light"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/start_up_button"
                android:elevation="2dp"
                android:translationZ="2dp"
                android:text="@string/start_up_sign_up"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sign_in_options_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/white"
            android:layout_gravity="center">

            <LinearLayout
                android:fontFamily="@font/lato_light"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:elevation="2dp"
                android:translationZ="2dp"
                android:orientation="horizontal"
                android:background="@drawable/sign_in_google_background">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_google"/>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:fontFamily="@font/lato_light"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_up_options_google"
                        android:textAlignment="gravity"
                        android:gravity="center_vertical"
                        android:layout_marginStart="50dp"
                        app:layout_constraintStart_toStartOf="parent" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:fontFamily="@font/lato_light"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:elevation="2dp"
                android:translationZ="2dp"
                android:background="@drawable/sign_in_facebook_background"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/start_up_sign_in_google"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_facebook"/>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:fontFamily="@font/lato_light"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/start_up_options_facebook"
                        android:textAlignment="gravity"
                        android:gravity="center_vertical"
                        android:layout_marginStart="50dp"
                        app:layout_constraintStart_toStartOf="parent" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:fontFamily="@font/lato_light"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:elevation="2dp"
                android:translationZ="2dp"
                android:background="@drawable/post_view_background"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_email"/>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:fontFamily="@font/lato_light"
                        android:textColor="#000000"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAlignment="gravity"
                        android:gravity="center_vertical"
                        android:layout_marginStart="50dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/start_up_options_email" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:fontFamily="@font/lato_light"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:elevation="2dp"
                android:translationZ="2dp"
                android:background="@drawable/sign_in_phone_background"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_phone"/>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="50dp"
                        android:fontFamily="@font/lato_light"
                        android:textColor="@color/white"
                        android:text="@string/start_up_options_phone"
                        android:textAlignment="gravity"
                        android:gravity="center_vertical"
                        app:layout_constraintStart_toStartOf="parent" />
                </android.support.constraint.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>

    </ViewFlipper>

</LinearLayout>
