<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/start_up_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/start_up_logo_background"
    android:visibility="visible"
    tools:context="com.fithub.codekienmee.fithub.StartUpActivity">

    <ImageView
        android:id="@+id/start_up_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@color/start_up_logo_background"
        android:cropToPadding="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/start_up_logo"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" />

    <io.netopen.hotbitmapgg.library.view.RingProgressBar
        android:id="@+id/loading_bar_circle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="348dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:max="100"
        app:ringColor="@color/colorAccent"
        app:ringProgressColor="@color/colorPrimaryDark"
        app:ringWidth="2dp"
        app:style="FILL"
        app:textColor="@color/colorPrimaryDark"
        app:textIsShow="true"
        app:textSize="16sp" />

</android.support.constraint.ConstraintLayout>
