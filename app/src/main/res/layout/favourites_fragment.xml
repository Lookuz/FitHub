<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favourites_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:elevation="4dp"
                android:translationZ="4dp">

                <LinearLayout
                    android:id="@+id/favourites_background_top"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:background="@color/orange"
                    android:orientation="vertical"></LinearLayout>

                <LinearLayout
                    android:id="@+id/favourites_background_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_gravity="bottom"
                    android:background="@color/black_translucent"
                    android:orientation="vertical"></LinearLayout>

                <android.support.constraint.ConstraintLayout
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="37.5dp"
                    android:background="@drawable/profile_background_circular"
                    android:elevation="8dp"
                    android:translationZ="8dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:elevation="8dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_my_favourites"
                        android:translationZ="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </android.support.constraint.ConstraintLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/lato_light"
                    android:text="@string/nav_favourites"
                    android:textSize="24dp" />

            </FrameLayout>

            <ViewFlipper
                android:id="@+id/favourites_view_flipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/favourites_posts_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/favourites_locations_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
            </ViewFlipper>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="90dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="125dp"
            android:background="@drawable/post_view_background"
            android:elevation="8dp"
            android:translationZ="8dp">

            <android.support.constraint.ConstraintLayout
                android:id="@+id/favourites_posts"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_posts"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/favourites_locations"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_fithub_location_icon_monochrome"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </android.support.constraint.ConstraintLayout>

        </LinearLayout>
    </FrameLayout>

</FrameLayout>